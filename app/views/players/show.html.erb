<div class="profile row" style="padding-top: 25px; position: relative; height: 100%">

    <div class="col-sm-8">
        <div class= "row">
            
            <div class="col-sm-5">
                <div class="pic">
                    <% if @player.picture %>
                        <img src="/pictures/<%= @player.nome.downcase %>.png">
                    <% else %>    
                        <img src="/pictures/placeholder.png">
                    <% end %>
                </div>
                <div class="buttons">
                        <%= link_to "Editar", edit_player_path, class: "btn"%>

                        <%= link_to "Excluir", player_path(@player), class: "btn", data: {
                            turbo_method: :delete,
                            turbo_confirm: "Tem certeza que deseja excluir o cadastro?"
                        }%>
                </div>  
            </div>
            
            <div class="col-sm-7">
                <div class="info">
                    <h1>
                        <%= @player.nome %>
                    </h1>
                    <h2> <%= @player.time %></h2>

                        
                    <div class="stats">
                        <h2>Estatísticas</h2>
                        <p>Partidas: <%= @matches.length %></p>
                        <p>Vitórias: <%= @wins.length %></p>
                        <h2>Taxa de vitórias: <strong><%= @winrate %></strong></h2>
                    </div>

                    
                </div>             
            </div>
        </div>
    </div>

    <div class="col-sm-4 right" style="text-align: center; padding-top: 50px;">
    <!--h1>Histórico</h1-->
        <div class="historico">
        <% @matches.each do |match|%>
        <div class="row" id='pontuação'>
            <div class="col-sm-4" id='j1'>
                <%= Player.find(match.winner).nome %>
            </div>
            
            <div class="col-sm-4" id='placar'><%= match.winner_score %> X <%= match.loser_score %></div>

            <div class="col-sm-4" id='j2'>
                <%= Player.find(match.loser).nome %>
            </div>
        </div>  
        <% end %>
        </div>
    </div>
</div>