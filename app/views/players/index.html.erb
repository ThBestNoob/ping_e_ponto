<div class="container cads">
    <div class="row">
        <h1>Jogadores</h1>
    </div>

    <span><%= link_to "Novo jogador", new_player_path, class:"btn"%></span>
    <% @players.each do |player|%>
    <div class="row player">
        <div class='col-sm-1'>
            <div class='picture'>
            <% if player.picture%>
                        <img src="pictures/<%=player.nome.downcase%>.png">
                    <% else %>
                        <img src="pictures/placeholder.png">
                    <% end %>
            </div>
        </div>
        <div class='col-sm-11' style="padding-left: 25px;">
            <h3><%= link_to player.nome, player%></h3>
            <p>Vit√≥rias: <%= player.vitorias%></p>
        </div>
    </div>
    <% end %>
</div>    