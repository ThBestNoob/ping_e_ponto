<div class="container">
<% @matches.each do |match|%>
    <div class="row" id='pontuação' style="margin: 10px; border-radius: 15px;">
        <div class="col-sm-4" id='j1' style="border: 2px gold solid;">
            <%= Player.find(match.winner).nome %>
        </div>
        
        <div class="col-sm-4" id='placar'><%= match.winner_score %> X <%= match.loser_score %></div>

        <div class="col-sm-4" id='j2'>
            <%= Player.find(match.loser).nome %>
        </div>
    </div>  
<% end %>
<h2>Partidas: <%= @matches.length %>
<h2>Vitórias: <%= @wins.length %>
<h1>Taxa de vitórias: <strong><%= @winrate %></strong></h1>
</div>