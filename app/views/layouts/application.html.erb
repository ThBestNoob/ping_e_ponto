    <!-- Local css -->
    <%= stylesheet_link_tag "style.css" %>

    <%= stylesheet_link_tag "application", "data-turbo-track": "reload" %>
    <%= javascript_importmap_tags %>
  </head>

  <body>
    <%= render partial: "shared/header"%>

    <div class="page">    
    <%= render partial: "shared/flash"%>

    <%= yield %>
    </div>
  </body>
</html>
